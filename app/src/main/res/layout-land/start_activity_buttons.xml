<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@color/start_activity_buttons_background"    
    android:padding="10dip" >

    <Button
        android:id="@+id/button_new_document_camera"
        style="@style/StartActivityButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_action_camera"
        android:text="@string/new_photo" />

    <Button
        android:id="@+id/button_new_document_gallery"
        style="@style/StartActivityButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_action_gallery"
        android:text="@string/new_photo_gallery" />

    <Button
        android:id="@+id/button_show_documents"
        style="@style/StartActivityButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_action_content"
        android:text="@string/show_documents" />

    <Button
        android:id="@+id/button_preferences"
        style="@style/StartActivityButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_action_preferences"
        android:text="@string/option_preference_title" />

</LinearLayout>